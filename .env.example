# .env.example
# Copy to .env and fill in your actual values

# =============================================================================
# AWS ECR Configuration
# =============================================================================
ECR_MIRROR_AWS_REGIONS="us-east-1,us-west-2,eu-west-1,ap-southeast-2"
# AWS credentials will be read from:
# - AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY environment variables
# - ~/.aws/credentials file
# - IAM roles (if running on EC2)

# =============================================================================
# Google Cloud GAR Configuration
# =============================================================================
GCP_PROJECT_ID="your-gcp-project-id"
GCR_GCP_REGIONS="us-central1,europe-west1,asia-southeast1,australia-southeast1"
# Optional: Service account for impersonation
GCP_SERVICE_ACCOUNT="terraform@your-project-id.iam.gserviceaccount.com"

# =============================================================================
# Azure ACR Configuration
# =============================================================================
ACR_AZURE_REGIONS="eastus,westus2,westeurope,australiaeast"
AZURE_RESOURCE_GROUP="container-registries-rg"
AZURE_ACR_NAME_PREFIX="yourorg"
# Optional: Service Principal credentials
# AZURE_CLIENT_ID="your-client-id"
# AZURE_CLIENT_SECRET="your-client-secret"
# AZURE_TENANT_ID="your-tenant-id"

# =============================================================================
# JFrog Artifactory Configuration
# =============================================================================
JFROG_URL="https://yourcompany.jfrog.io"
JFROG_USER="your-username"
JFROG_TOKEN="your-api-token"
JFROG_REPOSITORY="docker-local"

# =============================================================================
# DigitalOcean Container Registry Configuration
# =============================================================================
DOCR_TOKEN="your-digitalocean-api-token"
DOCR_REGISTRY_NAME="your-registry-name"
DOCR_REGIONS="nyc3,sfo3,ams3,sgp1"

# =============================================================================
# Terraform Variables (if using with Terraform)
# =============================================================================
TF_VAR_org_entity="your-org"
TF_VAR_environment="prod"

# =============================================================================
# Script Configuration
# =============================================================================
# Enable debug mode (set to 1 for verbose output)
DEBUG=0

# Parallel processing (number of concurrent mirrors)
MAX_PARALLEL_JOBS=3

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=5

# Platform architecture (default: linux/amd64)
TARGET_PLATFORM="linux/amd64"
